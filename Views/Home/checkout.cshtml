
@{
    ViewBag.Title = "checkout";
}

<h2>checkout</h2>

@if (TempData["cart"]!=null)
    {

    
    <table border="1">

        <thead>
            <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>PRICE</th>
                <th>QUANTITY</th>
                <th>BILL</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in TempData["cart"] as List<MvcApplicationEmarketing.Models.cart>)
            {
                
                <tr>
                    <td>@item.productid</td>
                    <td>@item.productname</td>
                    <td>@item.price</td>
                    <td>@item.qty</td>
                    <td>@item.bill</td>

                </tr>
                
            }

        </tbody>

        <tfoot>
            <tr>
                <td colspan="4"></td>
                <td>@TempData["total"]</td>

            </tr>
        </tfoot>
       
    </table>
    
     <input type="submit" value="submit" />
  
    
    
    
    }
else
{
       <h2 style="color:red"> Cart is empty....</h2>

 
                  <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center" > <span class="btn btn-danger">@Html.ActionLink("Go Back", "index","Home" )</span></h4>

}

