                 @Html.ActionLink("Close this Ad", "DeleteAd", new {@class="btn btn-info" ,id = Model.Pro_id })
               
              
                    
                }
                <h3 STYLE="background-color:lavender">If You Want to New purChase Then Click Add TO cART</h3>
                                <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center" > <span class="btn btn-danger">@Html.ActionLink("Add To Cart", "login", "Home", null, new { @class = "ht", })</span></h4>

                </td></tr>
       
        </table>
        
       
        </div>
  

    </div>





  

