@model MvcApplicationEmarketing.Models.Adviewmodel
@{
    ViewBag.Title = "ViewAd";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
      <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
  <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-lg-12 col-md-12">
        <img src="~/Content/deepu/14560020750060463280.png" class="img img-responsive" style="width:100%" />
    </div>
</div>

<div class="row">

    <div class="col-lg-2 col-md-2">
        <img src="~/Content/deepu/adlisting2.gif" class="img img-responsive" style=" height:800px;" />
