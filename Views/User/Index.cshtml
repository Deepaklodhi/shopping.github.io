
@using PagedList.Mvc
@model  PagedList.IPagedList<MvcApplicationEmarketing.Models.tbl_category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}




<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
  

    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
  <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
     <style> 
.cimg {
   -webkit-transform :5s;
   transition:transform 5s;
   
}

.cimg:hover {
   
    -webkit-transform: rotatez(360deg);
}
  
.mySlides {
    display:none;
           background-color:lightgray;

}
         
</style>
</head>
<body>
    <div class="w3-content w3-section" style="max-width:500px">
          <img class="mySlides" src="~/Content/upload/10945175504-zs-home_appliances_111-ab.jpg"  style="width:100%">
  <img class="mySlides" src="~/Content/upload/1378569238shoppingtools-buildandprice-Rio-SnowWhitePearl-RO_46J.jpg" style="width:100%" >

  <img class="mySlides" src="~/Content/upload/best.jpg" style="width:100%">
</div>


    <div  style="height:1150px; ">
       
 <div class="row">
            <div class="col-lg-12" style="height:100px; border:1px solid solid; ">


  <img src="~/Content/img/bg2.jpg" style="width:100%; height:100%" />
               

            </div>

        </div>       



        <div class="row" style="margin-bottom:40px">

            

            <div class="col-lg-12 col-md-12">
                <div class="row">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <div class="col-lg-3 col-md-3" style="height:200px;margin-top:100px">
                               
                                <img class="img img-responsive cimg" src="@Url.Content(item.cat_image)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
                                <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center"> @Html.ActionLink(@item.cat_Name, "Ads", new {id=@item.cat_id })</h4>
                           
                            </div>

                        }
                    }
                </div>
            </div>


            



           
        </div>


    </div>

    <div id="container" style="margin-left: 20px">
        <p></p>
        <p></p>
        <div class="pagination" style="margin-left: 400px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
    

       
          <script>
var myIndex = 0;
carousel();

function carousel() {
  var i;
  var x = document.getElementsByClassName("mySlides");
  for (i = 0; i < x.length; i++) {
    x[i].style.display = "none";  
  }
  myIndex++;
  if (myIndex > x.length) {myIndex = 1}    
  x[myIndex-1].style.display = "block";  
  setTimeout(carousel, 2000); // Change image every 2 seconds
}
</script>  
</body>
</html>





